@model EmpManagement.Models.EmployeeDetails
@{
    ViewBag.Title = "Edit Employee";
}
@section css {
    <link href="@Url.Content("../../assets/css/bootstrap.css")" rel = "stylesheet" />
    <!-- FONTAWESOME STYLE CSS -->
    <link href="@Url.Content("../../assets/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- CUSTOM STYLE CSS -->
    <link href="@Url.Content("../../assets/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("../../Content/Login.css")" rel = "stylesheet" />
    <!-- GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Ruluko' rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />
}
<nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
        <a class="pull-left">
            <img src="../../Content/empSystem.jpg" style="height: 50px; border-radius: 30px;"></a>
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                class="icon-bar"></span><span class="icon-bar"></span>
        </button>
        <a class = "navbar-brand" style="padding:15px;" href="@Url.Action("Index")"><i class="glyphicon glyphicon-circle-arrow-left">
        </i></a><a class="navbar-brand">Employee Management System</a>
    </div>
    <!-- Collect the nav links for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="@Url.Action("Logout")"><strong>Logout</strong></a> </li>
        </ul>
    </div>
    <!-- /.navbar-collapse -->
    <!-- /.container -->
</nav>
<div class="container fade-in">
    <div class="row text-center">
        <h1>
            Edit Employee</h1>
    </div>
    @if (TempData["Success"] != null)
    {
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-4">
                <h6 class="alert alert-success text-center">
                    <span class="glyphicon glyphicon glyphicon-ok"></span>&nbsp;&nbsp;@TempData["Success"]</h6>
            </div>
        </div>
    }
    @if (TempData["Fail"] != null)
    {
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-4">
                <h6 class="alert alert-danger text-center">
                    <span class="glyphicon glyphicon glyphicon-remove"></span>&nbsp;&nbsp;@TempData["Fail"]</h6>
            </div>
        </div>
    }
    @using (Html.BeginForm())
    {
    
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <div class="login" style="margin: 20px auto 90px;">
            <div class="login-container">
                @Html.HiddenFor(model => model.EmployeeID)
                <p style="padding: 12px 12px 0px 12px;">
                    Email:
                    @Html.EditorFor(model => model.email)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.email, "", new { style = "font-size:12px" })
                </div>
                <p>
                    Employee Name:
                    @Html.EditorFor(model => model.EmployeeName)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.EmployeeName, "", new { style = "font-size:12px" })
                </div>
                <p>
                    Address:
                    @Html.EditorFor(model => model.Address)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.Address, "", new { style = "font-size:12px" })
                </div>
                <p>
                    Department:
                    @Html.EditorFor(model => model.Dept)
                </p>
                <div class="validation-message pad-left">
                </div>
                <p>
                    Date of joining:
                    @Html.EditorFor(model => model.DOJ)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.DOJ, "", new { style = "font-size:12px" })
                </div>
                <p>
                    Date of birth:
                    @Html.EditorFor(model => model.DOB)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.DOB, "", new { style = "font-size:12px" })
                </div>
                <p>
                    Salary:
                    @Html.EditorFor(model => model.salary)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.salary, "Salary is required", new { style = "font-size:12px" })
                </div>
                <p>
                    Mobile:
                    @Html.EditorFor(model => model.contact)
                </p>
                <div class="validation-message pad-left">
                    @Html.ValidationMessageFor(model => model.contact, "", new { placeholder = "Mobile", style = "font-size:12px" })
                </div>
                <p>
                    <input type="submit" value="Edit Employee" />
                </p>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src = "@Url.Content("../../assets/plugins/jquery-1.10.2.js")"></script>
    <!-- BOOTSTRAP CORE SCRIPT   -->
    <script>
    <script src = "https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.9.0/jquery.validate.min.js"></script>
    <script src="@Url.Content("../../Content/assets/js/CreateEmployee.js")"></script>
    <script src="@Url.Content("../../Content/assets/plugins/bootstrap.js")"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("../../Content/assets/js/custom.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
