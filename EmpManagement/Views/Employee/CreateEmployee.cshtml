@model EmpManagement.Models.InsertViewModel
@{
    ViewBag.Title = "Create Employee";
}
@section css {
    <link href="@Url.Content("../../assets/css/bootstrap.css")" rel = "stylesheet" />
    <!-- FONTAWESOME STYLE CSS -->
    <link href="@Url.Content("../../assets/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- CUSTOM STYLE CSS -->
    <link href="@Url.Content("../../assets/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("../../Content/Login.css")" rel = "stylesheet" />
    <!-- GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Ruluko' rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />
}
<nav class="navbar navbar-inverse" role="navigation">
    <div class="navbar-header">
     <a class ="pull-left" ><img src="../../Content/images.png" style="height:50px;border-radius:30px;"></a>   
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                class="icon-bar"></span><span class="icon-bar"></span>
        </button>
        <a class = "navbar-brand" href="@Url.Action("Index")" style="padding:15px;"><i class="glyphicon glyphicon-circle-arrow-left">
        </i></a><a class="navbar-brand">Employee Management System</a>
    </div>
    <!-- Collect the nav links for toggling -->
    <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">
            <li><a href="@Url.Action("Logout")"><strong>Logout</strong></a> </li>
        </ul>
    </div>
    <!-- /.navbar-collapse -->
    <!-- /.container -->
</nav>
<div class="container fade-in">
    <div class="row text-center">
        <h1>
            Create New Employee
        </h1>
    </div>
      @if (TempData["Success"] != null)
    {
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-4">
                <h6 class="alert alert-success text-center"><span class="glyphicon glyphicon glyphicon-ok"></span>&nbsp;&nbsp;@TempData["Success"]</h6>
            </div>
        </div>
    }
        @if (TempData["Fail"] != null)
    {
        <div class="row text-center">
            <div class="col-md-4 col-md-offset-4">
                <h6 class="alert alert-danger text-center"><span class="glyphicon glyphicon glyphicon-remove"></span>&nbsp;&nbsp;@TempData["Fail"]</h6>
            </div>
        </div>
    }
    @using (Html.BeginForm("CreateEmployee", "Employee", FormMethod.Post, new { id = "formId" }))
    {
        <div class="login" style="margin: 0px auto 90px;">
            <div class="login-container">
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <p>
                    @Html.TextBoxFor(model => model.email, new { placeholder = @Html.DisplayNameFor(m => m.email) })
                </p>
                <div id="validateEmail" class="validation-message hd">
                      @Html.ValidationMessageFor(model => model.email, "Please enter email", new { @class = "pad-left" })
                </div>
                <p>
                    @Html.TextBoxFor(model => model.EmployeeName, new { placeholder = @Html.DisplayNameFor(m => m.EmployeeName) })
                </p>
                <div id="validateName" class="validation-message hd">
                @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @class = "pad-left" })
                </div>
                
                <p>
                    @Html.TextBoxFor(model => model.Address, new { placeholder = @Html.DisplayNameFor(m => m.Address) })
                </p>
                <div id="validateAddress" class="validation-message hd">
                @Html.ValidationMessageFor(model => model.Address, "Address is required", new { @class = "pad-left" })
                </div>
                
                <p>
                    @Html.TextBoxFor(model => model.Dept, new { placeholder = @Html.DisplayNameFor(m => m.Dept) })
                </p>
                <div id="validateDept" class="validation-message hd"></div>
                <p>
                    @Html.TextBoxFor(model => model.DOJ, new { type = "text", placeholder = "Date of Joining", onfocus = "(this.type='date')" })
                </p>
                <div id="validateDOJ" class="validation-message hd">
                @Html.ValidationMessageFor(model => model.DOJ, "", new { @class = "pad-left" })
                </div>
                
                <p>
                    @Html.TextBoxFor(model => model.DOB, new { type = "text", placeholder = "Date of birth", onfocus = "(this.type='date')" })
                </p>
                <div id="validateDOB" class="validation-message hd">
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "pad-left" })
                </div>
                
                <p>
                    @Html.TextBoxFor(model => model.salary, new { type = "number", placeholder = @Html.DisplayNameFor(m => m.salary) })
                </p>
                <div id="validateSalary" class="validation-message hd">
                @Html.ValidationMessageFor(model => model.salary, "Salary is required", new { @class = "pad-left" })
                </div>
                
                <p>
                    @Html.TextBoxFor(model => model.contact, new { placeholder = @Html.DisplayNameFor(m => m.contact) })
                </p>
                <div id="validateContact" class="validation-message hd">
                @Html.ValidationMessageFor(model => model.contact, "", new { @class = "pad-left" })
                </div>
                <p>
                    <input type="button" value="Create Employee" id = "formLogin"/>
                </p>
            </div>
        </div>
    }
</div>
<div class="for-full-back footer-emp">
    Copyright © 2016 www.leadsquared.com | All Rights Reserved
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src = "@Url.Content("../../assets/plugins/jquery-1.10.2.js")"></script>
    <!-- BOOTSTRAP CORE SCRIPT   -->
    <script src="@Url.Content("../../assets/js/CreateEmployee.js")"></script>
    <script src="@Url.Content("../../assets/plugins/bootstrap.js")"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("../../assets/js/custom.js")"></script>
}
