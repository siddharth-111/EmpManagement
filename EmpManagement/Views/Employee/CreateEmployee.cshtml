@model EmpManagement.Models.InsertViewModel
@{
    ViewBag.Title = "Create Employee";
}
@section css {
    <link href="@Url.Content("../../assets/css/bootstrap.css")" rel = "stylesheet" />
    <!-- FONTAWESOME STYLE CSS -->
    <link href="@Url.Content("../../assets/css/font-awesome.min.css")" rel="stylesheet" />
    <!-- CUSTOM STYLE CSS -->
    <link href="@Url.Content("../../assets/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("../../Content/Login.css")" rel = "stylesheet" />
    <!-- GOOGLE FONT -->
    <link href='http://fonts.googleapis.com/css?family=Ruluko' rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/PagedList.css")" rel="stylesheet" type="text/css" />
}
<nav class="navbar navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                    class="icon-bar"></span><span class="icon-bar"></span>
            </button>
            <a class = "navbar-brand" href="@Url.Action("Index")">
             <i class="glyphicon glyphicon-circle-arrow-left"></i>
            </a>
            <a class="navbar-brand">Employee Management System</a>
        </div>
        <!-- Collect the nav links for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Logout")"><strong>Logout</strong></a> </li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>
<div class="container">
    <div class="row text-center">
        <h1>
            Create New Employee
        </h1>
    </div>
    @using (Html.BeginForm())
    {
        <div class="login" style="margin: 20px auto 90px;">
            <div class="login-container">
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <p>
                    @Html.TextBoxFor(model => model.EmployeeName, new { placeholder = @Html.DisplayNameFor(m => m.EmployeeName) })
                </p>
                    @Html.ValidationMessageFor(model => model.EmployeeName, "", new { @class = "validation-message" })
                <p>
                    @Html.TextBoxFor(model => model.Address, new { placeholder = @Html.DisplayNameFor(m => m.Address) })
                </p>
                @Html.ValidationMessageFor(model => model.Address, "Address is required", new { @class = "validation-message" })
                <p>
                    @Html.TextBoxFor(model => model.DOB, new { type = "text", placeholder = "Date of birth", onfocus = "(this.type='date')" })
                </p>
                @Html.ValidationMessageFor(model => model.DOB, "Date of birth is required", new { @class = "validation-message" })
                <p>
                    @Html.TextBoxFor(model => model.salary, new { type = "number", placeholder = @Html.DisplayNameFor(m => m.salary) })
                </p>
                @Html.ValidationMessageFor(model => model.salary, "Salary is required", new { @class = "validation-message" })
                <p>
                    <input type="submit" value="Create Employee" />
                </p>
            </div>
        </div>
    }
</div>
<div class="for-full-back " id="footer">
    Copyright © 2016 www.leadsquared.com | All Rights Reserved
</div>
@section Scripts {
    <script src = "@Url.Content("../../assets/plugins/jquery-1.10.2.js")"></script>
    <!-- BOOTSTRAP CORE SCRIPT   -->
    <script src="@Url.Content("../../assets/plugins/bootstrap.js")"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("../../assets/js/custom.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
